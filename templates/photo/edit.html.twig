{% extends 'base.html.twig' %}

{% block title %}Modifier la photo{% endblock %}

{% block body %}
    <h1>Modifier la photo</h1>

    <div class="row">
        <div class="col-md-6">
            {{ include('photo/_form.html.twig') }}
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Aperçu actuel</div>
                <div class="card-body text-center">
                    <img src="{{ asset('uploads/photos/' ~ photo.filename) }}" alt="{{ photo.title }}" class="img-fluid" style="max-height: 300px;">
                </div>
            </div>
            
            <form method="post" action="{{ path('app_photo_delete', {'id': photo.id}) }}" class="mt-4" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette photo ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ photo.id) }}">
                <button class="btn btn-danger"><i class="bi bi-trash"></i> Supprimer</button>
            </form>
        </div>
    </div>

    <a href="{{ path('app_photo_index') }}" class="btn btn-secondary mt-3">
        <i class="bi bi-arrow-left"></i> Retour à la liste
    </a>
{% endblock %} 