{{ form_start(form, {'attr': {'class': 'content-form'}}) }}
    {{ form_errors(form) }}

    <div class="mb-3">
        {{ form_label(form.identifier, 'Identifiant unique', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.identifier, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.identifier) }}
        {{ form_help(form.identifier) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.section, 'Section', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.section, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.section) }}
        {{ form_help(form.section) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.title) }}
    </div>
    
    <div class="mb-3">
        {{ form_label(form.content, 'Contenu', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.content, {'attr': {'class': 'wysiwyg-editor'}}) }}
