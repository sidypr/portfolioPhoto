{% extends 'base.html.twig' %}

{% block title %}Tableau de bord | Administration{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">Tableau de bord</h1>
        <a href="{{ path('app_photo_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Ajouter une photo
        </a>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h2 class="h5">Statistiques</h2>
                    <div class="d-flex justify-content-between mt-3">
                        <div>
                            <p class="mb-0">Photos</p>
                            <h3 class="h2 mb-0">{{ photos_count }}</h3>
                        </div>
                        <div class="fs-1 text-primary">
                            <i class="bi bi-image"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white border-0">
                    <a href="{{ path('app_photo_index') }}" class="btn btn-sm btn-outline-primary">
                        Voir toutes les photos
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white">
            <h2 class="h5 mb-0">Photos récentes</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Titre</th>
                            <th>Catégorie</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for photo in latest_photos %}
                            <tr>
                                <td>
                                    <img src="{{ asset('uploads/photos/' ~ photo.filename) }}" alt="{{ photo.title }}" width="100" class="img-thumbnail">
                                </td>
                                <td>{{ photo.title }}</td>
                                <td>{{ photo.category }}</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('app_photo_show', {'id': photo.id}) }}" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="{{ path('app_photo_edit', {'id': photo.id}) }}" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-center">Aucune photo trouvée</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %} 